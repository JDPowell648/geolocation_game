<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/UsernameText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Username"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Username" />

    <TextView
        android:id="@+id/AvgScoreText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Average Score: X"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GamesPlayedText"
        tools:text="Average Score: X" />

    <TextView
        android:id="@+id/GamesPlayedText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Games Played: X"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RankText"
        tools:text="Games Played: X" />

    <TextView
        android:id="@+id/AccuracyText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Guess Accuracy: X Km"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AvgScoreText"
        tools:text="Guess Accuracy: X Km" />

    <TextView
        android:id="@+id/RankText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Ranked #X"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UsernameText"
        tools:text="Ranked #X" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="213dp"
        android:layout_height="91dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#BD1111"
        android:text="Return to Menu"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Return to Menu" />

    <Button
        android:id="@+id/logout"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="36dp"
        android:contentDescription="profilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/temp_profile_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>